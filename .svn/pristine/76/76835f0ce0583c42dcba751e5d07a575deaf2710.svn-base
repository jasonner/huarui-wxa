// 查询订单列表：已支付
var getList = function(that){
  console.log('getList')
  // 设置页面一加在进来就显示"加载中"模态框信息
  that.setData({
    hidden: false
  });
  
// 已付款情况：查询订单列表
  hrp.orderList({ orderStatusGroup: '02', pageSize: 4, currentPage: 1 }).then((data) => {
    that.setData({
      total:data.total
    })
    console.log(data)
    if (data.records) {
      // 无订单
      if (data.records === 0) {
        this.noProductPay()
      } else {
        // 有订单
        var orderList = that.data.orderList;
        for (var i = 0; i < data.orderList.length; i++) {
          orderList.push(data.orderList[i]);
        }
        that.setData({
          orderList: orderList
        });
        console.log(that.data.orderList)
        that.data.page++;
        
        console.log('getList当前页(page++)：第' + that.data.page + '页')
        that.setData({
          hidden: true
        });  
        that.hasProductPay()
      }
    } else {
      wx.showToast({
        title: data.resultMessage,
        icon: 'loading',
        duration: 2000 
      })
      
    }
  })
}

// 查询订单列表：待支付
var noPayList = function(that){
  console.log('noPayList')
  // 设置页面一加在进来就显示"加载中"模态框信息
  that.setData({
    hidden: false
  });
  // 未付款情况：查询订单列表
  hrp.orderList({ orderStatusGroup: '01', pageSize: 4, currentPage: 1 }).then((data) => {
    console.log(data)
    that.setData({
      total: data.total
    })
    console.log(data)
    if (data.records) {
      // 无订单
      if (data.records === 0) {
        console.log('无订单')
        this.noProduct()
      } else {
        console.log('有订单')
        // 有订单
        var noPayOrderList = that.data.noPayOrderList;
        for (var i = 0; i < data.orderList.length; i++) {
          noPayOrderList.push(data.orderList[i]);
        }
        that.setData({
          noPayOrderList: noPayOrderList
        });
        console.log(that.data.noPayOrderList)
        that.data.noPayPage++;

        console.log('noPayList当前页(noPayPage++)：第' + that.data.noPayPage + '页')
        that.setData({
          hidden: true
        });
        that.hasProduct()
      }
    } else {
      wx.showToast({
        title: data.resultMessage,
        icon: 'loading',
        duration: 2000
      })
      
    }
  })
}


