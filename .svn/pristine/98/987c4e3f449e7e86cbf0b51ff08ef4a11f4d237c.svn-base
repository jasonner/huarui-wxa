  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    this.setData({
      loadingModelShow: false,
      loadingHidden: false
    })
    pageUtil.checkLogin().then((data)=>{
      console.log(data)
      var that = this;
       that.setData({
