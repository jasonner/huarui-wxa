// 查询订单列表：已支付
var getList = function (that){
  console.log('getList');
  // 设置页面一加在进来就显示"加载中"模态框信息
// 已付款情况：查询订单列表
  hrp.orderList({ orderStatusGroup: '02', pageSize:  that.data.page, currentPage: ""}).then((data) => {
    that.setData({
      total:data.total,
      records: data.records
    })
    console.log(data)
    if (data.records) {
      // 无订单
      if (data.records === 0) {
        console.log('已支付无订单')
        this.noProductPay()
      } else {
        console.log('已支付有订单')
        // 有订单
        var payedOrderList = data.orderList;
        console.log(payedOrderList);
        that.setData({
          payedOrderList: payedOrderList
        });
        console.log(that.data.payedOrderList)
        that.data.page++;
        
        console.log('getList当前页(page++)：第' + that.data.page + '页')
        that.setData({
          hidden: true
        });  
        that.hasProductPay()
      }
    }
    that.setData({
      loadingModelShow: true,
      loadingHidden: true
    })
  })
}

// 查询订单列表：待支付
var noPayList = function (that){
  console.log('noPayList')
  // 设置页面一加在进来就显示"加载中"模态框信息
  that.setData({
    hidden: false
  });
  // 未付款情况：查询订单列表
  hrp.orderList({ orderStatusGroup: '01', pageSize:  that.data.noPayPage, currentPage: ""}).then((data) => {
    console.log(data)
    that.setData({
      total: data.total
    })
    console.log(data)
    if (data.records) {
      // 无订单
      if (data.records === 0) {
        console.log('待付款无订单')
        this.noProduct()
      } else {
        console.log('待付款有订单')
        // 有订单
        var waitPayedOrderList = data.orderList;
        console.log(waitPayedOrderList);
        that.setData({
          waitPayedOrderList: waitPayedOrderList
        });
        console.log(that.data.waitPayedOrderList)
        that.data.noPayPage++;
        
        console.log('noPayList当前页(noPayPage++)：第' + that.data.noPayPage + '页')
        that.setData({
          hidden: true
        });
        that.hasProduct()
      }
    } else {
      wx.showToast({
        title: data.resultMessage,
        icon: 'loading',
        duration: 2000
      })
      
    }
  })
}


Page({

