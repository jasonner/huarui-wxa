        });
      }
    });  
     getList(that);
     noPayList(that);
  },
  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {
    this.setData({
      loadingModelShow: true,
      loadingHidden: true,
    }) 
  },
  //下拉刷新
  onPullDownRefresh: function () {
    wx.showNavigationBarLoading() //在标题栏中显示加载

    //模拟加载
    setTimeout(function () {
      // complete
      wx.hideNavigationBarLoading() //完成停止加载
      wx.stopPullDownRefresh() //停止下拉刷新
    }, 1500);
  },
  // 分页处理
  bindDownLoad: function () {
    var that = this;
    console.log('页面滑倒底部')
    //页面滑动到底部的事件  
    if(that.data.pay){
      console.log('已支付tab页')
      // 已支付tab页
      if (that.data.total == that.data.records){
  
        wx.showModal({
          title: '提示',
          content: '已经没有更多数据了',
          confirmColor: "#f3b256"
        })
      }else{
        this.setData({
          loadingModelShow: true,
          loadingHidden: true,
        }) 
        that.data.page+=1;
          getList(that,that.data.page);
      }
    }else{
      console.log('未支付tab页')
      console.log(that.data.total);
      console.log()
      // 未支付tab页
      if (that.data.total == that.data.records){
  
        wx.showModal({
          title: '提示',
          content: '已经没有更多数据了',
          confirmColor: "#f3b256"
        })
      }else{
        that.data.noPayPage+=1;
        noPayList(that, that.data.noPayPage)
      }
    }
  },  
  // 页面滚动监听
  scroll: function (event) {
    //  该方法绑定了页面滚动时的事件，我这里记录了当前的position.y的值,为了请求数据之后把页面定位到这里来。  
    this.setData({
      scrollTop: event.detail.scrollTop
    });
  },
 

})