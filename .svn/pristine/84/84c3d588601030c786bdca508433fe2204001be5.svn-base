//index.js
//获取应用实例
const app = getApp()
const hrp = require('../../api/hrp.js')
Page({
  data: {
    motto: 'Hello World',
    userInfo: {},
    hasUserInfo: false,
    canIUse: wx.canIUse('button.open-type.getUserInfo'),
    // productInfo: hrp.homeInfo({ "type": "wxa", "system": "hr" }),
    productInfo: {
      "imgUrl": "/pages/index/img/indexBG.png",
      "productList": [
        {
          "productName": "",
          "productUrl": "../productDetail/productDetail",
          "productImageUrl": "/pages/index/img/tabg.png",
          "productDesc": ""
        },
        {
          "productName": "",
          "productUrl": "../productDetail/productDetail",
          "productImageUrl": "/pages/index/img/tabg.png",
          "productDesc": ""
        },
        {
          "productName": "",
          "productUrl": "../productDetail/productDetail",
          "productImageUrl": "/pages/index/img/tabg.png",
          "productDesc": ""
        }
      ]
    },
    // imgUrls: [
      // '/pages/index/img/tabg.png',
      // '/pages/index/img/tabg.png',
      // '/pages/index/img/tabg.png'
    // ],
    slider: [
      { picUrl: 'http://img06.tooopen.com/images/20160818/tooopen_sy_175866434296.jpg' },
      { picUrl: '<span style="font-family: 微软雅黑;">/pages/</span><span style="font-family: 微软雅黑;">index/img/tab1.png' }, 
      { picUrl: '/pages/index/img/tab1.png' },
    ],
    swiperCurrent: 0,  
    indicatorDots: true,
    vertical: false,
    autoplay: false,
    interval: 3000,
    duration: 1000,
    loadingHidden: false  // loading
  },
 
  //事件处理函数
  // goDetails: function() {
  //   //跳转至产品详情页面
  //   wx.navigateTo({
  //     // url: '../productDetail/productDetail'
  //     // url: this.data.productInfo.productList.productUrl
  //   })
  // },
  onLoad: function () {
   
    if (app.globalData.userInfo) {
      this.setData({
        userInfo: app.globalData.userInfo,
        hasUserInfo: true
      })
    } else if (this.data.canIUse){
      // 由于 getUserInfo 是网络请求，可能会在 Page.onLoad 之后才返回
      // 所以此处加入 callback 以防止这种情况
      app.userInfoReadyCallback = res => {
        this.setData({
          userInfo: res.userInfo,
          hasUserInfo: true
        })
      }
    } else {
      // 在没有 open-type=getUserInfo 版本的兼容处理
      wx.getUserInfo({
        success: res => {
          app.globalData.userInfo = res.userInfo
          this.setData({
            userInfo: res.userInfo,
            hasUserInfo: true
          })
        }
      })
    }
  },
  getUserInfo: function(e) {
    console.log(e)
    app.globalData.userInfo = e.detail.userInfo
    this.setData({
      userInfo: e.detail.userInfo,
      hasUserInfo: true
    })
  },
  changeIndicatorDots: function (e) {
    this.setData({
      indicatorDots: !this.data.indicatorDots
    })
  },
  changeAutoplay: function (e) {
    this.setData({
      autoplay: !this.data.autoplay
    })
  },
  intervalChange: function (e) {
    this.setData({
      interval: e.detail.value
    })
  },
  swiperChange: function (e) {
    this.setData({
      swiperCurrent: e.detail.current
    })
  },  
  durationChange: function (e) {
    this.setData({
      duration: e.detail.value
    })
  }
})
