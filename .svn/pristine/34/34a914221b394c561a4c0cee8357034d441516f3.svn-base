                          beginUnit = "Y";
                        }
                        if (ageUnit == beginUnit) {       // 单位相同
                          if (parseInt(ageVal) >= parseInt(beginVal)) {
                            checkMin = true;
                          } else {
                            checkMin = false;
                          }
