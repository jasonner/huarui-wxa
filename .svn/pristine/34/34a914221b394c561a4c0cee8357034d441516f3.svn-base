                    var beginVal = ageMapperArry[0].substring(0, ageMapperArry[0].length - 1);  // 获取单位 eg: D
                    if (beginUnit == "天") {
                      beginUnit = "D";
                    } else if (beginUnit == "年") {
                      beginUnit = "Y";
                    }
                    if (ageUnit == beginUnit && parseInt(ageVal) == parseInt(beginVal)) {       // 单位相同
                      checkMin = true;
                      checkMax = true;
                    } else {                      // 单位不同
                      checkMin = false;
                      checkMax = false;
                    }
                  } else { //18Y-65Y的情况
                    // $.each(ageMapperArry, function (n, value) {
