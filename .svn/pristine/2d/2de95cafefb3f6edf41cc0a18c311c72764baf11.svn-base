    <!--下一步  -->
    <view class='kefuBox'>
          <view>{{price}}<text class='money'>元</text></view>
          <view  bindtap='insureBTN'>下一步</view>
    </view>
    <view class='tipErr' hidden='{{tipErrShow}}'>{{tipErrText}}</view>
</view>
